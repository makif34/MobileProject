<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp8.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp8"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp8">

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:Home}"  />
        </Tab>
        <Tab Title="Client" Icon="face.png">
            <ShellContent ContentTemplate="{DataTemplate local:Client}"  />
        </Tab>
        <Tab Title="Sales Rep." Icon="person.png">
            <ShellContent ContentTemplate="{DataTemplate local:Sales}" />
        </Tab>
        <Tab Title="Assignment" Icon="group.png">
            <ShellContent ContentTemplate="{DataTemplate local:Assign}"/>
        </Tab>
        <Tab Title="Report" Icon="calculator.png">
            <ShellContent ContentTemplate="{DataTemplate local:Report}" />
        </Tab>
    </TabBar>


</Shell>
